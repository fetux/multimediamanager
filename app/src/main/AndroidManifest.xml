<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fetu.multimedia" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".PlaySortedActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SortActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".FileConfigActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".FilterActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".NewFileActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".NewAudioFileActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".NewVideoFileActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".NewImageFileActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".NewAlbumActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ReportsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".FileDetailActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".AlbumActivity"
            android:label="@string/title_activity_album" >
        </activity>
    </application>

</manifest>
