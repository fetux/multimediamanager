<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/report1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VER REPORTE"
        android:onClick="onButtonReportViewClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUARDAR REPORTE"
        android:onClick="onButtonReportSaveClicked" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/report2"/>


    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="206dp"
        android:id="@+id/datePicker" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VER REPORTE"
        android:onClick="onButtonRankingViewClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUARDAR REPORTE"
        android:onClick="onButtonRankingSaveClicked" />


    <ScrollView
        android:id="@+id/svReports"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></ScrollView>

</LinearLayout>